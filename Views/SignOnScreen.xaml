<Window x:Class="TheTenantManager.SignOnScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TheTenantManager"
        mc:Ignorable="d"
        Title="Sign-On Screen" Height="350" Width="400">
    <Grid>
        <Label Content="Username:" HorizontalAlignment="Left" Margin="10,30,0,0" VerticalAlignment="Top" Width="100"/>
        <Label Content="Password:" HorizontalAlignment="Left" Margin="10,130,0,0" VerticalAlignment="Top" Width="100"/>
        <TextBox HorizontalAlignment="Left" x:Name="UsernameBox" Margin="10,60,0,0" VerticalAlignment="Top" Height="50" Width="350"/>
        <PasswordBox HorizontalAlignment="Left" x:Name="PasswordBox" Margin="10,160,0,0" VerticalAlignment="Top" Height="50" Width="350"/>
        <Button Content="Sign In" x:Name="signonButton" Click="SignOnButtonClick" HorizontalAlignment="Left" Margin="10,260,0,0" VerticalAlignment="Top" Width="350" Height="40"/>
    </Grid>
</Window>
